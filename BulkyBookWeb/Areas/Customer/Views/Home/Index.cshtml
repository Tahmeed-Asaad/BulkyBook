@model IEnumerable<BulkyBook.Models.Product>

<div class="row pb-3">

    @foreach(var product in Model.Reverse())
    
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">

                        <img src="@product.ImageURL" width="500" height="423" class="card-img-top rounded" />
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary p pclass">@product.Title</p>
                                <p class="card-title text-info  pclass">Author: <b>@product.Author</b></p>
                        </div>

                        <div class="pl-1">
                            <p>List Price: <b>$@product.ListPrice.ToString("0.00")</b></p>
                            <p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
                            
                        </div>
                    </div>
                    </div>

                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
                            Details
                        </a>
                    </div>
                  </div>
                </div>    
               </div>
    }
</div>